                }]
            },
            options: {
                plugins: {
                    legend: {
                        labels: {
                            usePointStyle: true
                        }
                    }
                },
                responsive: true,
                maintainAspectRatio: false,
                interaction: {
                    intersect: false,
                    mode: 'index'
                }
            }
        });

        // Create pie chart
        function createPieChart(monthData) {
